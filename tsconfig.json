{
  "compilerOptions": {
    "target": "ES2015",                
    "module": "ES6",                   
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,                     
    "jsx": "react",                    
    "esModuleInterop": true,            
    "skipLibCheck": true,              
    "declaration": true,                
    "declarationMap": true,            
    "sourceMap": true,                 
    "outDir": "./dist",                
    "allowJs": true,                   
    "lib": ["dom", "es2015"]           
  },
  "include": [
    "src/**/*"                          
  ],
  "exclude": [
    "node_modules",                    
    "dist"                             
  ]
}
